{
  "name": "@dq/tools-configs",
  "version": "1.0.1",
  "description": "Configurations used by the Dynamic Quants Team",
  "exports": "./src/mod.ts",
  "license": "MIT",
  "tasks": {
    "fmt": "deno fmt"
  },
  "imports": {
    "@jest/types": "npm:@jest/types@^29.6.3",
    "@std/assert": "jsr:@std/assert@1",
    "@types/jest": "npm:@types/jest@^29.5.14",
    "jest": "npm:jest@^29.7.0",
    "next": "npm:next@^15.0.3"
  },
  "publish": {
    "include": [
      "LICENSE",
      "README.md",
      "src/**/*.ts"
    ]
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "checkJs": true
  },
  "fmt": {
    "singleQuote": true,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "useTabs": false
  },
  "lint": {
    "rules": {
      "exclude": ["no-unused-vars"]
    }
  }
}
