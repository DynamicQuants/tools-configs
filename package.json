{
  "name": "@dynamic-quants/tools-configs",
  "version": "1.0.19-beta.1",
  "description": "Configurations used by the Dynamic Quants Team",
  "author": "Dynamic Quants",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/DynamicQuants/tools-configs.git"
  },
  "exports": {
    "./eslint": {
      "import": "./dist/eslint/index.js",
      "require": "./dist/eslint/index.js"
    },
    "./jest": {
      "import": "./dist/jest/index.js",
      "require": "./dist/jest/index.js"
    },
    "./tailwind": {
      "import": "./dist/tailwind.ts",
      "require": "./dist/tailwind.ts"
    },
    "./prettier": {
      "import": "./dist/prettier.js",
      "require": "./dist/prettier.js"
    },
    "./typescript/*": "./dist/typescript/*"
  },
  "scripts": {
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "build": "tsup --onSuccess \"cp -a ./src/typescript dist/\""
  },
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "@vercel/style-guide": "^6.0.0",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "next": "^15.0.3",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.14",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@9.11.0",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}
